  border:none;
}
.authen_title{
  color: #af4343;
  font-weight: bold;
  margin-top: 30rpx;
}

.authen_btn{
  width: 100%;
  height: 25%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #16BF98;
