<official-account></official-account>
<view>
  <view>
    <view class='title'>
      <view class="title_text"><view class='dot'></view>我的设备</view>
      <image bindtap="addDevice" class="add_device" src='../../images/add.png'></image>
    </view>
    <view wx:if="{{!deviceList.length}}">
      <view><image class="no_apparatus" src='../../images/pic-home-not-added.png'></image></view>
      <view class='tip_text'>未添加任何设备</view>
    </view>
    <view wx:if="{{deviceList.length}}">
      <view class='device_item' wx:for="{{deviceList}}" wx:key="{{index}}" >
        <view class="item_title" data-index="{{index}}" bindtap='goHomePage'>
          <view class='left_text1'>编号：{{item.sn}}</view>
          <image class="title_more" src='../../images/more.png'></image>
        </view>
        <view class="item_content">
          <view class='device_item_left'>
            <view class='left_text'>名称：<span class="left_text2">{{item.name}}</span></view>
            <view class='left_text1'>型号：{{item.model}}</view>
            
            <view class='left_text1'>状态：
              <view class="online" wx:if="{{item.status === '在线'}}">{{item.status}}</view>
              <view class="offline" wx:else><image class="connect_gif" src='../../images/connect.gif'></image>连接中</view>
            </view>
          </view>
          <view class='device_item_right'>
            <image class="pic_M6" src='../../images/device-img.png'></image>
            <image bindtap='handleOpen' data-index="{{index}}" class="open-icon" src='../../images/open-icon.png'></image>
          </view>
        </view>
      </view>
    </view>
    <view class="add_apparatus" bindtap="goCreateTemp">
      <view class="list_text"><image class="icon_img" src="/images/guest.png"></image>访客管理</view>
    </view>
    <!-- <view bindtap="addDevice" class='add_apparatus'>添加设备</view> -->
  </view>
</view>