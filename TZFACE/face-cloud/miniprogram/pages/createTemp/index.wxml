<!--pages/admPw/index.wxml-->
<view>
  <view class="addPw_input">
    <view class="input_title">访客姓名：</view>
    <input bindinput="bindTelInput" maxlength="12" value="{{name}}" placeholder="请输入访客姓名"/>
  </view>
  <view class="addPw_input">
    <view>人脸照片：</view>
    <view class="person" bindtap="handleAddPhoto">
      <image class="icon_img" src="/images/photo.png"></image>
      <image class="face" src="{{fileID}}"></image>
      <view class="face_name">点击录入</view>
    </view>
  </view>
  <view class="addPw_input">
    <view class="input_title">授权设备：</view>
    <checkbox-group bindchange="checkboxChange">
      <label class="checkitem" wx:for="{{deviceList}}" wx:key="{{item.sn}}">
        <checkbox value="{{item.sn}}" checked="{{item.checked}}"/>
        <text>{{item.sn}}</text>
      </label>
    </checkbox-group>
  </view>
  <!-- <view class="addPw_input">
    <picker bindchange="bindPickerValidChange" value="{{validIndex}}" range="{{validArray}}">
      <view class="picker">
        使用次数: {{validArray[validIndex]}}
      </view>     
    </picker>
    <image class="list_more" src="/images/more.png"></image>
  </view> -->
  <view class="addPw_input">
    <picker mode="multiSelector" value="{{dateTime2}}" bindchange="changeDateTime2" bindcolumnchange="changeDateTimeColumn2" range="{{dateTimeArray2}}">
      <view class="tui-picker-detail">
        开始时间: {{dateTimeArray2[0][dateTime2[0]]}}-{{dateTimeArray2[1][dateTime2[1]]}}-{{dateTimeArray2[2][dateTime2[2]]}} {{dateTimeArray2[3][dateTime2[3]]}}:{{dateTimeArray2[4][dateTime2[4]]}}
      </view>
    </picker>
    <image class="list_more" src="/images/more.png"></image>
  </view>
  <view class="addPw_input">
    <picker mode="multiSelector" value="{{dateTime1}}" bindchange="changeDateTime1" bindcolumnchange="changeDateTimeColumn1" range="{{dateTimeArray1}}">
      <view class="tui-picker-detail">
        结束时间: {{dateTimeArray1[0][dateTime1[0]]}}-{{dateTimeArray1[1][dateTime1[1]]}}-{{dateTimeArray1[2][dateTime1[2]]}} {{dateTimeArray1[3][dateTime1[3]]}}:{{dateTimeArray1[4][dateTime1[4]]}}
      </view>
    </picker>
    <image class="list_more" src="/images/more.png"></image>
  </view>
  <view bindtap="goNext" class='add_apparatus'>提交</view>
</view>
