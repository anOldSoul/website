
.addPw_input{
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #efefef;
}
checkbox-group {
  width: 450rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.checkitem {
  margin-right: 20rpx;
  margin-bottom: 15rpx;
}
input {
  font-size: 30rpx;
}
picker {
  width: 95%;
}
.list_more{
  width: 14rpx;
  height: 28rpx;
}

.person {
  width: 150rpx;
  height: 150rpx;
  background: #ececec;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  position: relative;
  border-radius: 100rpx;
  margin-left: 10rpx;
  overflow: hidden;
  border: 1rpx dotted black;
}
.icon_img{
  width: 48rpx;
  height: 48rpx;
}
.face {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.face_name {
  width: 100%;
  font-size: 22rpx;
  text-align: center;
  margin-top: 7rpx;
}
.progress-box {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
progress{
  margin: 0 20rpx;
}
.progress_img {
  width: 92rpx;
  height: 32rpx;
  margin: 0 auto;
}
.progress-text {
  color: #fff;
  text-align: center;
  font-size: 29rpx;
}