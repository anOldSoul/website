page{
  height: 100%;
}
.add_password{
  width:670rpx;
  height:94rpx;
  color: #fff;
  background:rgba(9,25,40,1);
  font-size:36rpx;
  box-shadow:0 4rpx 8rpx 0 rgba(9,25,40,0.24);
  border-radius:12rpx;
  line-height: 94rpx;
}
.password{
  height: -webkit-calc(100% - 300rpx);
  overflow: scroll;
}

.pw_item{
  width:610rpx;
  padding: 0 40rpx;
  height:94rpx;
  background:rgba(255,255,255,1);
  box-shadow:0 2rpx 12rpx 0 rgba(0,0,0,0.1);
  border-radius:12rpx;
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  margin-top: 40rpx;
}
.fixed{
  width: 100%;
  position: fixed;
  bottom: 0;
  padding-bottom: 60rpx;
  padding-top: 30rpx;
  z-index: 99;
  background: #fff;
}