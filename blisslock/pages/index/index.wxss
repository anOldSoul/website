/* pages/index/index.wxss */
.no_apparatus{
  width: 472rpx;
  height: 307rpx;
  margin-left: 139rpx;
  margin-top: 94rpx;
  margin-bottom: 78rpx;
}
.tip_text{
  font-size: 34rpx;
  text-align: center;
}
.add_apparatus{
  width:360rpx;
  height:94rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 140rpx;
  background:rgba(9,25,40,1);
  box-shadow:0 4rpx 8rpx 0 rgba(9,25,40,0.24);
  border-radius:8rpx;
  color: #fff;
  margin-left: 195rpx;
  font-size: 36rpx;
}
.device_item{
  width:690rpx;
  height:320rpx;
  background:rgba(255,255,255,1);
  box-shadow:0 4rpx 16rpx 0 rgba(0,0,0,0.1);
  border-radius:12rpx;
  margin-left: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.pic_M6{
  width: 213rpx;
  height: 264rpx;
  margin-top: 28rpx;
  margin-right: 77rpx;
}
.left_text{
  font-size: 34rpx;
  line-height: 1.5;
}
.device_item_left{
  margin-top: 44rpx;
  margin-left: 40rpx;
}
.authen{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.authen_modal{
  width: 80%;
  height: 30%;
  background: white;
  border-radius: 5%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  overflow: hidden;
}
button {
  border-radius: 0;
  margin: 0;
  padding: 0;
}
button::after{
  border:none;
}
.authen_title{
  font-weight: bold;
  margin-top: 10%;
}
.authen_text{
  color: gray;
  font-size: 32rpx;
  margin: 20rpx 30rpx;
  text-align: center;
  line-height: 1.5;
}
.authen_btn{
  width: 100%;
  height: 25%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #16BF98;
  background: #fff;
  border-top: 1rpx solid rgba(0,0,0,0.11);
}
.air_quality{
  color: #17BF98;
  font-size: 30rpx;
  width:257rpx;
  height:72rpx;
  background: rgba(23,191,152,0.1886);
  z-index: 99;
  border-radius:36rpx 0 0 36rpx;
  position: absolute;
  right: 0;
  top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.ic-airquality{
  width: 35rpx;
  height: 25rpx;
  margin-right: 10rpx;
}