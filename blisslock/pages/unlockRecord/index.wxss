/* pages/index/index.wxss */
.section{
  width: 100%;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  position: fixed;
  height: 88rpx;
  background: #fff;
}
.picker{
  display: flex;
  align-items: center;
  justify-content: center;
}
.ic-record-dropdown{
  width: 36rpx;
  height: 36rpx;
  margin-left: 15rpx;
}
.tip_text{
  width:710rpx;
  background:rgba(255,255,255,1);
  box-shadow:0 2rpx 12rpx 0 rgba(0,0,0,0.1);
  border-radius:12rpx;
  margin-left: 20rpx;
  margin-bottom: 30rpx;
}

.repair_title{
  font-size:32rpx;
  padding: 24rpx;
  color:#666666;
  border-bottom: 1rpx solid rgba(0,0,0,0.11);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.text_content{
  padding: 24rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.pw_record_img{
  width:100rpx;
  height:100rpx;
}
.left{
  margin-right: 24rpx;
}
.content_left {
  height:100rpx; 
  display: flex;
  flex-direction: row;
}
.time{
  font-size: 32rpx;
}
.detail{
  font-size:28rpx;
  color:rgba(153,153,153,1);
  margin-top: 11rpx;
}
.detail1{
  font-size:28rpx;
  color:green;
  margin-top: 11rpx;
}
.detail2 {
  font-size:28rpx;
  color:red;
  margin-top: 11rpx;
}
.record_list{
  margin-bottom: 200rpx;
  margin-top: 90rpx;
}
.record_bottom{
 width: 100%;
 height: 170rpx;
 background: #fff; 
 position: fixed;
 bottom: 0;
 left: 0;
}