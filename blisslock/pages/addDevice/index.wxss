/* pages/index/index.wxss */
.title{
  margin: 0 40rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 36rpx;
}
.apparatus_box{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  margin-top: 45rpx;
  margin-bottom: 52rpx;
}
.operate_text{
  position: absolute;
  top: 254rpx;
  right: 75rpx;
  font-size: 36rpx;
  font-weight: bold;
}
.bold_text{
  color: black;
  font-weight: bold;
}
.dot{
  width: 24rpx;
  height: 24rpx;
  border-radius: 12rpx;
  background-color: #17BF98;
  margin-right: 20rpx;
}
.no_apparatus{
  width: 400rpx;
  height: 306rpx;
  margin: 100rpx 0;
}
.add_apparatusChecked{
  width:670rpx;
  height:94rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  background:rgba(9,25,40,1);
  box-shadow:0 4rpx 8rpx 0 rgba(9,25,40,0.24);
  border-radius:8rpx;
  color: #fff;
  margin-left: 40rpx;
  font-size: 36rpx;
  opacity: 0.5;
}
.tip_text{
  font-size: 30rpx;
  margin: 0 30rpx;
  color: #666666;
  line-height:50rpx;
}

.check{
  font-size:26rpx;
  color:rgba(153,153,153,1);
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 67rpx;
}