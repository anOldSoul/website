/* pages/admPw/index.wxss */
.addPw_input{
  margin: 40rpx 0;
}
input{
  width: 630rpx;
  height: 94rpx;
  background-color: #F0F0F0;
  margin-left: 30rpx;
  padding:0 30rpx;
  font-size: 30rpx;
  border-radius: 12rpx;
}
.fixed{
  width: 100%;
  position: fixed;
  bottom: 0;
  padding-bottom: 60rpx;
  padding-top: 30rpx;
  z-index: 99;
  background: #fff;
}
.tip{
  font-size:28rpx;
  color:rgba(153,153,153,1);
  padding:0 30rpx;
}
.temp_box{
  width:690rpx;
  height:250rpx;
  background:rgba(255,255,255,1);
  box-shadow:0 2rpx 12rpx 0 rgba(0,0,0,0.1);
  border-radius:12rpx;
  margin-left: 30rpx;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 60rpx;
}
.add_password{
  width:670rpx;
  height:94rpx;
  color: #fff;
  background:rgba(9,25,40,1);
  font-size:36rpx;
  box-shadow:0 4rpx 8rpx 0 rgba(9,25,40,0.24);
  border-radius:12rpx;
  line-height: 94rpx;
  text-align: center;
  margin-left: 40rpx;
  margin-top: 40rpx;
}
.sync_password{
  width:670rpx;
  height:94rpx;
  color:rgba(153,153,153,1);
  border:2rpx solid rgba(153,153,153,1);
  font-size:36rpx;
  border-radius:12rpx;
  line-height: 94rpx;
  margin-top: 40rpx;
}