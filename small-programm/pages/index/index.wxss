/**index.wxss**/
page{
  width: 100%;
  height: 100%;
}
.container{
  width: 100%;
  height: 100%;
}
.bacImg{
  width: 100%;
  height: 100%;
}
.bannerImg{
  width: 750rpx;
  height: 350rpx;
}

.button{
  width: 670rpx;
  background-color: var(--colorG);
  color: #fff;
  font-size: 36rpx;
  margin-top: 60rpx;
}
.bac{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 99;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bac_box{
  width: 80%;
  background: #fff;
  border-radius: 12rpx;
}
.box_title{
  text-align: center;
  border-bottom: 1rpx solid #cccccc;
  padding: 30rpx;
  font-size: 30rpx;
}
.cardList{
  padding: 40rpx;
  padding-bottom: 0rpx;
}
.cardItem{
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  height: 40rpx;
  align-items: center;
  padding-bottom: 40rpx;
}
.checkbox{
  margin-right: 40rpx;
}
.btnList{
  width: 100%;
  height: 88rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 35rpx;
  border-top: 1rpx solid #cccccc;
}
.border{
  width: 1rpx;
  height: 88rpx;
  background: #cccccc;
}
.return{
  width: 50%;
  text-align: center;
}
.sure{
  text-align: center;
  color: #ff4400;
  width: -webkit-calc(50% - 1rpx);
}
.inputSection{
  height: 110rpx;
  line-height: 110rpx;
  padding-left: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
  display:flex;
  flex-direction: row;
  font-size: 30rpx;
}
.tel{
  width: 160rpx;
  font-size: 32rpx;
}
.telZoomWidth{
  width: 280rpx;
  font-size: 32rpx;
}
.inputSection input{
  /*width: 72%;*/
  height: 110rpx;
  line-height: 110rpx;
}
.tips{
  margin-top: 30rpx;
  color: red;
}
.support{
  width: 100%;
  position: absolute;
  bottom: 30rpx;
  font-size: 30rpx;
  text-align: center;
  color: #b9b6b6;
  padding: 30rpx 0;
}
.agree{
  width: 90%;
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  margin-top: 30rpx;
  color: var(--colorG);
}
.underline{
  text-decoration: underline;
}
.loginByPhone{
  width: 550rpx;
  height: 208rpx;
  margin-top: 170rpx;
}