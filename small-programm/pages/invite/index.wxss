.tixian_bg{
  width: 750rpx;
  height: 600rpx;
  position: relative;
}
.renqi{
  position: absolute;
  bottom: 15.5%;
  line-height: 1;
  color: #fff;
  left: 300rpx;
  font-size: 60rpx;
}
image{
  width: 100%;
  height: 100%;
}
.code_img{
  margin: 0 auto;
  width: 340rpx;
  height: 340rpx;
}
.header{
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  align-items: center;
  justify-content: space-between;
  margin: 10rpx 30rpx;
}
.icon_img{
  width: 26rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.icon_img1{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.header_item{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.bottom_btn{
  width: 690rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: var(--colorG);
  color: #fff;
  text-align: center;
  margin-left: 30rpx;
  font-size: 30rpx;
  margin-top: 60rpx;
}
.reward_bac{
  width: 750rpx;
  height: 570rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.reward_list{
  width: 750rpx;
  height: 570rpx;
  position: relative;
  display: flex;
}
.fans_list{
  position:absolute;
  width:523rpx;
  height:270rpx;
  top:200rpx;
  left:98rpx;
  font-size:26rpx;
  color:rgba(50,50,50,1);
  padding:20rpx;
  overflow:scroll;
}
.fans{
  border-bottom:1rpx solid #efefef;
  padding:15rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.orderNumber{
  display: flex;
  align-items:center;
  color: rgba(103,120,151,1);
  font-size: 40rpx;
  margin-right: 20rpx;
}
.fan_left{
  display: flex;
  flex-direction: row;
}
.consumptionDescr{
  font-size: 26rpx;
  color: var(--colorG);
  display: flex;
  align-items:center;
}