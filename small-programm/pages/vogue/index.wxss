.money_img{
  width: 60rpx;
  height: 60rpx;
}
.value1{
  height: 28rpx;
  display: flex;
  align-items: center;
  color: var(--colorG);
  font-size: 40rpx;
}
.pay{
  font-size: 28rpx;
  color: #cccccc;
}
.category_swiper{
  width: 100%;
  height: 76rpx;
  font-size: 26rpx;
  border-bottom: 1rpx solid #eaeaea;
  border-top: 1rpx solid #eaeaea;
  line-height: 76rpx;
  text-align: center;
}
.desc{
  width: 290rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  margin-top: -80rpx;
  background: #ff47ac;
  margin-bottom: 20rpx;
  color: #fff;
}
.rangeGoods_item{
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  align-items: center;
}
.rangeGoods_img{
  width: 345rpx;
  height: 345rpx;
  margin-bottom: 20rpx;
}
.range_goods_list{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 20rpx;
}
.rangeGoods_text{
  width: 345rpx;
  font-size: 30rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.range_item{
  width: 100rpx;
}
.slide-imageselect_on{
  color: var(--colorG);
}
.empty{
  color: var(--colorG);
  text-align: center;
  line-height: 500rpx;
  font-size: 35rpx;
}

.buy{
  width: 345rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}
.price_info{
  display: flex;
  flex-direction: column;
}
.cart_num{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  right: 40rpx;
  bottom: 200rpx;
}
.cart_num image{
  width: 100%;
  height: 100%;
}
.total_num{
  color: #fff;
  font-size: 22rpx;
  position: fixed;
  right: 58rpx;
  bottom: 255rpx;
}