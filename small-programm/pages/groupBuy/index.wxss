page{
  width: 100%;
  height: 100%;
}
.content{
  width: 750rpx;
  background: var(--colorG);
  padding-bottom: 20rpx;
}
.contact{
  text-align: center;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #ffffff;
}
.center{
  width: 690rpx;
  height: 340rpx;
  background: #ffffff;
  display: flex;
  flex-direction: row;
  margin: 0 auto;
}
.pintuan_result{
  position: absolute;
  right: 20rpx;
}
.center_title{
  font-size: 30rpx;
}
.where{
  margin-left: 20rpx;
  margin-right: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.btn{
  width:710rpx;
  margin: 0 auto;
  height:98rpx;
  line-height: 98rpx;
  text-align: center;
  border-radius: 5rpx;
  background: var(--colorG);
  color: #ffffff;
  font-size: 30rpx;
  margin-bottom:30rpx;
  animation-name: scaleDraw; /*关键帧名称*/
  animation-timing-function: ease-in-out; /*动画的速度曲线*/
  animation-iteration-count: infinite;  /*动画播放的次数*/
  animation-duration: 4s; /*动画所花费的时间*/
}
@keyframes scaleDraw {  /*定义关键帧、scaleDrew是需要绑定到选择器的关键帧名称*/
    0%{
        transform: scale(1);  /*开始为原始大小*/
    }
    25%{
        transform: scale(0.9); /*放大1.1倍*/
    }
    50%{
        transform: scale(1);
    }
    75%{
        transform: scale(0.9);
    }
}
.pic{
  width: 340rpx;
  height: 340rpx;
}
.good_name{
  font-size: 30rpx;
  text-align: justify;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.limit_btn{
  font-size: 26rpx;
  border: 1rpx solid var(--colorG);
  color: var(--colorG);
  text-align: center;
  border-radius: 5rpx;
  margin-top: 25rpx;
  width: 150rpx;
  padding: 7rpx 0;
}
.limit_price{
  font-size: 40rpx;
  color: var(--colorG);
  line-height: 1;
  margin-top: 30rpx;
}
.market_price{
  font-size: 20rpx;
  text-decoration: line-through;
  margin-left: 10rpx;
  color: gray;
}
.triangle{
    display:block;
    width:0;
    height:0;
    border-width:40rpx 25rpx 0;
    border-style:solid;
    border-color:#fff transparent transparent;
    margin: 0 auto;
}
.group_buy_members{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin: 40rpx 0;
  position: relative;
}
.group_invite{
  text-align: center;
  margin: 40rpx 0;
  font-size: 30rpx;
  color: #323232;
}
.group_buy_friends{
  display: flex;
  flex-direction: row;
  margin-right: -10rpx;
}
.pic_default{
  width: 110rpx;
  height: 110rpx;
  border-radius: 55rpx;
  margin-right: 10rpx;
}
.surplus{
  font-size: 26rpx;
  display: flex;
  flex-direction: row;
}
.surplus_num{
  color: var(--colorG);
}
.time_box{
  display: flex;
  flex-direction: row;
  color: var(--colorG);
  margin: 0 20rpx;
}
.time{
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  color: #fff;
  background: var(--colorG);
  text-align: center;
  font-size: 22rpx;
}
.group_info{
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx;
  align-items: center;
}
.pic_leader{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-right: 20rpx;
}
#line{
  border-bottom: 1rpx solid #cccccc;
  border-top: 20rpx solid #f4f4f4;
}
.info_left{
  display: flex;
  flex-direction: row;
}
.leader_info{
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.tuanzhang{
  color: gray;
}
.ztsb{
  width: 130rpx;
  height: 130rpx;
}