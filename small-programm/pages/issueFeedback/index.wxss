/* pages/issueFeedback/index.wxss */
.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  color: #323232;
  align-items: center;
}
.i-item{
  border-top: 20rpx solid #f6f6f6;
  height: 78rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.i-item-title{
  margin-left: 40rpx;
}
.i-item-input{
  margin-left: 40rpx;
  width: 500rpx;
}
.textarea-view{
  height: 390rpx;
  width: 100%;
  margin: 10rpx 0rpx;
  border-bottom: 20rpx solid #f6f6f6;
}
.textarea-view textarea{
  margin-left: 40rpx;
  margin-right: 30rpx;
  line-height: 1.2rem;
  width: 670rpx;
}
.handleBtn{
  background: var(--colorM);
  margin: 60rpx 0;
  width: 690rpx;
  color: white;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;

}